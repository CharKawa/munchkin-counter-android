<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_player_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_with_avatar_height"
    android:background="@drawable/player_list_item_selector"
    android:minHeight="@dimen/list_item_with_avatar_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_side_padding"
    android:paddingRight="@dimen/list_item_side_padding">

    <ImageView
        android:id="@+id/iv_player_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/list_item_side_padding"
        android:text="Player Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

</LinearLayout>