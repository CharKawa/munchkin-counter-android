<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datarockets.mnchkn">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MunchkinCounterTheme"
        android:name=".MunchkinApplication">

        <activity android:name=".activities.dashboard.DashboardActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.welcome.WelcomeActivity"/>
        <activity android:name=".activities.result.GameResultActivity"/>
        <activity android:name=".activities.settings.SettingsActivity"/>

    </application>

</manifest>
